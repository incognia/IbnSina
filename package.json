{
  "name": "ibnsina-medicamentos",
  "version": "1.0.0",
  "description": "Aplicación web para el control de medicamentos - Desarrollada por Rodrigo Álvarez",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["medicamentos", "salud", "control", "hipertensión", "diabetes"],
  "author": "Rodrigo Álvarez <incognia@gmail.com>",
  "license": "GPL-3.0-or-later",
  "type": "commonjs",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
